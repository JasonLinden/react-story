{
  "name": "react-story",
  "version": "0.0.1",
  "description": "A story component for displaying, developing, and testing React components",
  "license": "MIT",
  "homepage": "https://github.com/tannerlinsley/react-story#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tannerlinsley/react-story.git"
  },
  "keywords": [
    "react",
    "story",
    "react-story",
    "datagrid"
  ],
  "main": "lib/index.js",
  "files": [
    "src/",
    "lib/",
    "react-story.js",
    "media/*.png"
  ],
  "scripts": {
    "build": "babel src --out-dir lib --source-maps inline --presets=es2015,stage-2,react",
    "watch": "onchange 'src/**/*.js' -i -- npm run build",
    "test": "standard",
    "umd": "rimraf react-story.js && webpack --config umd.webpack.js",
    "prepublish": "npm run build && npm run umd",
    "postpublish": "git push --tags",
    "docs": "cd docs && yarn && yarn run build"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "glamorous": "^3.14.0",
    "javascript-detect-element-resize": "^0.5.3",
    "raf": "^3.3.2",
    "react-router-dom": "next"
  },
  "peerDependencies": {
    "react": "^15.x.x"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.0",
    "babel-cli": "6.14.0",
    "babel-eslint": "6.1.2",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.13.0",
    "glamor": "^2.20.25",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "rimraf": "^2.6.1",
    "standard": "^8.0.0",
    "webpack": "^2.4.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "node_modules",
      "dist",
      "lib",
      "example",
      "react-story.js",
      "stories",
      "docs"
    ]
  }
}
